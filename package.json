{
  "name": "donations-app",
  "version": "1.0.0",
  "description": "Support nonprofit journalism by giving to The Texas Tribune",
  "author": "Andrew Gibson <agibson@texastribune.org>",
  "scripts": {
    "dev": "bundle exec middleman",
    "build": "yarn run middleman && yarn run critical",
    "middleman": "bundle exec middleman build",
    "critical": "node ./utils/critical.js",
    "deploy": "./utils/deploy.sh",
    "build:deploy": "yarn run build && yarn run deploy",
    "js:dev": "webpack --watch",
    "js:prod": "webpack"
  },
  "main": "source/index.html.erb",
  "repository": {
    "type": "git",
    "url": "https://github.com/texastribune/donations-app"
  },
  "bugs": {
    "url": "https://github.com/texastribune/donations-app/issues"
  },
  "config": {
    "s3_bucket": "support.texastribune.org"
  },
  "dependencies": {
    "es5-shim": "^4.5.9",
    "jquery": "^1.12.4",
    "node-bourbon": "^4.2.3",
    "node-neat": "^1.7.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.22.0",
    "css-loader": "^0.26.4",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "glob": "^7.1.1",
    "inline-critical": "^2.4.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.3",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.13.2",
    "webpack": "^2.2.1"
  },
  "license": "MIT",
  "engines": {
    "node": "^6.11.2",
    "npm": "^5.3.0"
  }
}
