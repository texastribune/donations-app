---
title: Circle Membership
---

<div class="splash">
  <div class="splash-wrapper">
    <div class="splash-greeting">
      <h1 class="splash-header">Join Our Circle</h1>
      <p class="splash-info"><%= data.Info[0]['about_trib'] %></p>
      <h4 class="splash-support"><%= data.Info[0]['support_cta'] %></h4>
    </div><!-- splash-greeting -->
    <% data.levels.each do |level| %>
      <% if level.circle %>
        <div class="circle-box">
          <div class="circle-box-top">
            <h3><%= level.name %></h3>
            <h4>$<%= level.amount_annual_comma %> Annually</h4>
            <p><em>Three-Year Commitment</em></p>
          </div>
          <div class="circle-box-bottom">
            <% if level.benefactor_plus %>
              <h4>All Benefactor level benefits, plus:</h4>
            <% else %>
              <h4>All previous level benefits, plus:</h4>
            <% end %>
            <div class="circle-box-benefits">
            <% if level.extra_access_benefits %>
              <% level.extra_access_benefits.each do |benefit| %>
                <p><%= benefit %></p>
              <% end %>
            <% end %>
            <% if level.extra_content_benefits %>
              <% level.extra_content_benefits.each do |benefit| %>
                <p><%= benefit %></p>
              <% end %>
            <% end %>
            <% if level.extra_recognition_benefits %>
              <% level.extra_recognition_benefits.each do |benefit| %>
                <p><%= benefit %></p>
              <% end %>
            <% end %>
            </div>
            <a href="/circleform?&amp;amount=<%= level.amount_annual %>&amp;installmentPeriod=yearly&amp;installments=3"><button class="button button-flat">Join <i class="fa fa-chevron-right"></i></button></a>
            <a href="/circleform?&amp;amount=<%= level.amount_annual %>&amp;installmentPeriod=yearly&amp;installments=3"><button style="float: right;" class="button button-flat">Renew <i class="fa fa-chevron-right"></i></button></a>
          </div>
        </div>
      <% end %>
    <% end %>
  </div><!-- splash-wrapper -->
  <%= partial "desktop_nav" %>
</div><!-- splash-circle -->

<div class="main">
  <div class="main-left">
    <h2 class="tagline"><%= data.Info[0]['tagline'] %></h2>
    <%= partial "videos" %>
  </div>
  <div class="main-right">
    <h3 class="section-header">Have a Question?</h3>
    <% data.Contacts.each do |contact| %>
      <% if contact['on_circle_page'] == 'yes' %>
        <div class="contact-info">
          <h5><%= contact['department'] %></h5>
          <h4><%= contact['name'] %></h4>
          <p class="italic"><%= contact['title'] %></p>
          <p><%= contact['phone'] %></p>
          <p><a href="mailto:<%=contact['email'] %>"><%= contact['email'] %> <i class="fa fa-chevron-right"></i></a></p>
        </div>
      <% end %>
    <% end %>
    <hr>
    <%= partial "give_more" %>
    <hr>
    <%= partial "share" %>
  </div>
</div>
<div class="thanks outer-info">
  <div class="inner-info"><hr>Thank you for supporting The Texas Tribune<hr></div>
</div>
