---
title: Become a Member
---

<div class="splash splash-landing">
  <div class="splash-wrapper">
    <div class="splash-greeting">
      <h1 class="splash-header">Support Us</h1>
      <p class="splash-info"><%= data.info %></p>
      <h4 class="splash-support"><%= data.support %></h4>
    </div>
    <div class="box-contribute">
      <div class="contribute">
        <form id="contribution-form" action="#" method="get">
          $<input name="amount" value="8" type="number" id="spinner">
          <div id="contribute-buttons">
              <input type="radio" value="year" id="yearly" name="frequency">
              <label for="yearly"><i class="fa fa-check"></i>Annually</label>
              <input checked="checked" type="radio" value="month" id="monthly" name="frequency">
              <label for="monthly"><i class="fa fa-check"></i>Monthly</label>
          </div>
          <h5>Your Level:</h5>
          <h3>Activist</h3>
          <a href="/levels.html"><p><strong><em>Explore benefits &amp; membership levels <i class="fa fa-angle-right"></i></em></strong></p></a>
          <button type="submit" class="button button-flat">Contribute Now <i class="fa fa-angle-right"></i></button>
        </form>
      </div>
      <div class="renew">
        <h4>Already a member?</h4>
        <a href="#"><p><strong>Renew your membership here <i class="fa fa-angle-right"></i></strong></p></a>
      </div>
    </div><!-- box-contribute -->
  </div><!-- splash-wrapper -->
  <%= partial "nav" %>
</div><!-- splash-landing -->

<div class="main">
  <div class="main-left">
    <h3><%= data.tagline %></h3>
    <hr>
    <h3>Have a question?</h3>
      <% data.contacts.each do |contact| %>
        <div class="contact-info">
          <h5><%= contact.about %></h5>
          <h4><%= contact.name %></h4>
          <p><%= contact.title %></p>
          <p><%= contact.phone %></p>
          <p><a href="mailto:<%=contact.email %>"><%= contact.email %> <i class="fa fa-angle-right"></i></a></p>
        </div>
      <% end %>
    <hr>
    <h3>Ready to share?</h3>
  </div>
  <div class="main-right">
    <% data.levels_index.each do |level| %>
    <div class="level">
      <% if level.most_popular %>
        <h5>Most Popular</h5>
      <% end %>
      <% if level.circle %>
        <h5>Circle Membership</h5>
      <% end %>
      <h3><%= level.name %></h3>
      <h4><%= level.amount %></h4>
      <% if level.commitment %>
        <p>Three-Year Commitment</p>
      <% end %>
      <% if level.all_above %>
        <p>All the above, plus:</p>
        <!-- list extra benefits for level by category -->
        <% if level.extra_content_benefits %>
          <h5>Content Benefits</h5>
          <% level.extra_content_benefits.each do |benefit| %>
            <p><%= benefit %></p>
          <% end %>
        <% end %>
        <% if level.extra_access_benefits %>
          <h5>Access Benefits</h5>
          <% level.extra_access_benefits.each do |benefit| %>
            <p><%= benefit %></p>
          <% end %>
        <% end %>
        <% if level.extra_recognition_benefits %>
          <h5>Recognition Benefits</h5>
          <% level.extra_recognition_benefits.each do |benefit| %>
            <p><%= benefit %></p>
          <% end %>
        <% end %>
      <% else %> <!-- if not level.all_above -->
        <!-- list all benefits by category -->
        <% if level.all_content_benefits %>
          <h5>Content Benefits</h5>
          <% level.all_content_benefits.each do |benefit| %>
            <p><%= benefit %></p>
          <% end %>
        <% end %>
        <% if level.all_access_benefits %>
          <h5>Access Benefits</h5>
          <% level.all_access_benefits.each do |benefit| %>
            <p><%= benefit %></p>
          <% end %>
        <% end %>
        <% if level.all_recognition_benefits %>
          <h5>Recognition Benefits</h5>
          <% level.all_recognition_benefits.each do |benefit| %>
            <p><%= benefit %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <hr />
    <% end %>
  </div>
</div>

<script>
  // Initialize number input spinner for express checkout
  $("#spinner").spinner();

  // Initialize radio buttonset for monthly/annually
  $("#contribute-buttons").buttonset();
</script>
